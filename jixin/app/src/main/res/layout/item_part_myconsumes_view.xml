<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/dimen_dp_5"
    android:paddingLeft="@dimen/dimen_dp_10"
    android:paddingRight="@dimen/dimen_dp_10"
    android:paddingTop="@dimen/dimen_dp_5">

    <ImageView
        android:id="@+id/item_myconsumes_iv"
        android:layout_width="@dimen/dimen_dp_50"
        android:layout_height="@dimen/dimen_dp_50"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_dp_10"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_myconsumes_goodsname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:singleLine="true"
            android:textColor="@color/color_2B2B2B"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/item_myconsumes_goodsdescription_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/color_757575"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_dp_5"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_myconsumes_goodsnum_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数量:1"
            android:textColor="@color/color_2B2B2B"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/item_myconsumes_goodsprice_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥ 2.00"
            android:textColor="@color/color_ec7b6b"
            android:textSize="13sp" />
    </LinearLayout>

</LinearLayout>