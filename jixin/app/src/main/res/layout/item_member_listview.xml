<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_member_root_ll"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/dimen_dp_70"
    android:background="@color/color_ffffff"
    android:clickable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/dimen_dp_10">

    <com.base.baselibs.widget.ShapeImageView xmlns:img="http://schemas.android.com/apk/res-auto"
        android:id="@+id/item_member_head_iv"
        android:layout_width="@dimen/dimen_dp_50"
        android:layout_height="@dimen/dimen_dp_50"
        android:layout_marginLeft="@dimen/dimen_dp_10"
        android:layout_marginRight="@dimen/dimen_dp_10"
        android:src="@mipmap/img_sign_logo"
        img:shape="circle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_member_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="name"
                android:textColor="#000000"
                android:textSize="@dimen/dimen_sp_15" />

            <TextView
                android:id="@+id/item_member_age_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_dp_5"
                android:background="@drawable/gray_redius_bg"
                android:gravity="right"
                android:paddingBottom="@dimen/dimen_dp_3"
                android:paddingLeft="@dimen/dimen_dp_5"
                android:paddingRight="@dimen/dimen_dp_5"
                android:paddingTop="@dimen/dimen_dp_3"
                android:visibility="gone"
                android:text="23岁"
                android:textColor="#ababab"
                android:textSize="@dimen/dimen_sp_12" />

            <TextView
                android:id="@+id/item_member_gander_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_dp_5"
                android:background="@drawable/gray_redius_bg"
                android:gravity="right"
                android:paddingBottom="@dimen/dimen_dp_3"
                android:paddingLeft="@dimen/dimen_dp_5"
                android:paddingRight="@dimen/dimen_dp_5"
                android:paddingTop="@dimen/dimen_dp_3"
                android:visibility="gone"
                android:text="女性"
                android:textColor="#ababab"
                android:textSize="@dimen/dimen_sp_12" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dimen_dp_5"
            android:layout_marginRight="@dimen/dimen_dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_member_sign_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#9d9d9d"
                android:textSize="@dimen/dimen_sp_13"
                android:text="女性"
                android:minLines="1"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/item_other_tx"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="8号座/1小时前"
        android:textColor="#b8b8b8"
        android:textSize="@dimen/dimen_sp_12" />

</LinearLayout>