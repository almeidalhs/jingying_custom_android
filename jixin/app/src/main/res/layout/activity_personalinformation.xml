<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_dp_30"
                android:paddingLeft="@dimen/dimen_dp_15"
                android:gravity="center_vertical"
                android:textSize="@dimen/dimen_sp_14"
                android:text="我的账户"
                android:textColor="@color/color_6d6d72"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_line"/>

            <LinearLayout
                android:id="@+id/personalinfor_aount_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_dp_40"
                android:background="@color/color_ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen_dp_15"
                android:paddingRight="@dimen/dimen_dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="账号信息"
                    android:textColor="@color/color_494949"
                    android:textSize="@dimen/dimen_sp_15" />

                <TextView
                    android:id="@+id/personalinfor_aount_tx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_dp_10"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/color_6d6d72"
                    android:textSize="@dimen/dimen_sp_13" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_ffffff">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/dimen_dp_15"
                    android:background="@color/color_line"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/personalinfor_resetpwd_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_dp_40"
                android:background="@drawable/white_no_radius_bt_selector"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen_dp_15"
                android:paddingRight="@dimen/dimen_dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="修改密码"
                    android:textColor="@color/color_494949"
                    android:textSize="@dimen/dimen_sp_15" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_dp_15"
                    android:src="@mipmap/right_arrow" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_line"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_dp_30"
                android:paddingLeft="@dimen/dimen_dp_15"
                android:gravity="center_vertical"
                android:textSize="@dimen/dimen_sp_14"
                android:text="我的资料"
                android:textColor="@color/color_6d6d72"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_line"/>

            <LinearLayout
                android:id="@+id/personalinfor_nick_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_dp_40"
                android:background="@drawable/white_no_radius_bt_selector"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen_dp_15"
                android:paddingRight="@dimen/dimen_dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="昵称"
                    android:textColor="@color/color_6d6d72"
                    android:textSize="@dimen/dimen_sp_15" />

                <TextView
                    android:id="@+id/personalinfor_nick_tx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_dp_10"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/color_494949"
                    android:textSize="@dimen/dimen_sp_13" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_dp_15"
                    android:src="@mipmap/right_arrow" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_ffffff">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/dimen_dp_15"
                    android:background="@color/color_line"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/personalinfor_headimg_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_dp_40"
                android:background="@drawable/white_no_radius_bt_selector"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen_dp_15"
                android:paddingRight="@dimen/dimen_dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="头像"
                    android:textColor="@color/color_494949"
                    android:textSize="@dimen/dimen_sp_15" />

                <com.base.baselibs.widget.ShapeImageView
                    xmlns:img="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/personalinfor_headimg_iv"
                    android:layout_width="@dimen/dimen_dp_30"
                    android:layout_height="@dimen/dimen_dp_30"
                    android:layout_marginRight="@dimen/dimen_dp_10"
                    android:src="@mipmap/img_sign_logo"
                    img:shape="circle" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_dp_15"
                    android:src="@mipmap/right_arrow" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_ffffff">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/dimen_dp_15"
                    android:background="@color/color_line"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/personalinfor_gander_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_dp_40"
                android:background="@drawable/white_no_radius_bt_selector"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen_dp_15"
                android:paddingRight="@dimen/dimen_dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="性别"
                    android:textColor="@color/color_494949"
                    android:textSize="@dimen/dimen_sp_15" />

                <TextView
                    android:id="@+id/personalinfor_gander_tx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_dp_10"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/color_6d6d72"
                    android:textSize="@dimen/dimen_sp_13" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_dp_15"
                    android:src="@mipmap/right_arrow" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_ffffff">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/dimen_dp_15"
                    android:background="@color/color_line"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/personalinfor_birthday_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_dp_40"
                android:background="@drawable/white_no_radius_bt_selector"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen_dp_15"
                android:paddingRight="@dimen/dimen_dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="生日"
                    android:textColor="@color/color_494949"
                    android:textSize="@dimen/dimen_sp_15" />

                <TextView
                    android:id="@+id/personalinfor_birthday_tx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_dp_10"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/color_6d6d72"
                    android:textSize="@dimen/dimen_sp_13" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_dp_15"
                    android:src="@mipmap/right_arrow" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_ffffff">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/dimen_dp_15"
                    android:background="@color/color_line"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/personalinfor_display_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_dp_40"
                android:background="@drawable/white_no_radius_bt_selector"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen_dp_15"
                android:paddingRight="@dimen/dimen_dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="常出没地"
                    android:textColor="@color/color_494949"
                    android:textSize="@dimen/dimen_sp_15" />

                <TextView
                    android:id="@+id/personalinfor_display_tx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_dp_10"
                    android:layout_marginLeft="@dimen/dimen_dp_10"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/color_6d6d72"
                    android:textSize="@dimen/dimen_sp_13" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_dp_15"
                    android:src="@mipmap/right_arrow" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_ffffff">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/dimen_dp_15"
                    android:background="@color/color_line"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/personalinfor_signatrue_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_dp_40"
                android:background="@drawable/white_no_radius_bt_selector"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen_dp_15"
                android:paddingRight="@dimen/dimen_dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个性签名"
                    android:textColor="@color/color_494949"
                    android:textSize="@dimen/dimen_sp_15" />

                <TextView
                    android:id="@+id/personalinfor_signatrue_tx"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/dimen_dp_10"
                    android:layout_marginLeft="@dimen/dimen_dp_10"
                    android:layout_weight="1"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/color_6d6d72"
                    android:textSize="@dimen/dimen_sp_13" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_dp_15"
                    android:src="@mipmap/right_arrow" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_ffffff">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/dimen_dp_15"
                    android:background="@color/color_line"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/personalinfor_emotionstatus_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_dp_40"
                android:background="@drawable/white_no_radius_bt_selector"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen_dp_15"
                android:paddingRight="@dimen/dimen_dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="情感状态"
                    android:textColor="@color/color_494949"
                    android:textSize="@dimen/dimen_sp_15" />

                <TextView
                    android:id="@+id/personalinfor_emotionstatus_tx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_dp_10"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/color_6d6d72"
                    android:textSize="@dimen/dimen_sp_13" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_dp_15"
                    android:src="@mipmap/right_arrow" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_ffffff">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/dimen_dp_15"
                    android:background="@color/color_line"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/personalinfor_occupation_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_dp_40"
                android:background="@drawable/white_no_radius_bt_selector"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen_dp_15"
                android:paddingRight="@dimen/dimen_dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="职业"
                    android:textColor="@color/color_494949"
                    android:textSize="@dimen/dimen_sp_15" />

                <TextView
                    android:id="@+id/personalinfor_occupation_tx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_dp_10"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/color_6d6d72"
                    android:textSize="@dimen/dimen_sp_13" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_dp_15"
                    android:src="@mipmap/right_arrow" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_ffffff">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/dimen_dp_15"
                    android:background="@color/color_line"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/personalinfor_hobby_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_dp_40"
                android:background="@drawable/white_no_radius_bt_selector"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen_dp_15"
                android:paddingRight="@dimen/dimen_dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="兴趣爱好"
                    android:textColor="@color/color_494949"
                    android:textSize="@dimen/dimen_sp_15" />

                <TextView
                    android:id="@+id/personalinfor_hobby_tx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_dp_10"
                    android:layout_marginLeft="@dimen/dimen_dp_10"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/color_6d6d72"
                    android:textSize="@dimen/dimen_sp_13" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_dp_15"
                    android:src="@mipmap/right_arrow" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_line"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>