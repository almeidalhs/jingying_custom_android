<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dimen_dp_10"
    android:paddingRight="@dimen/dimen_dp_10"
    android:paddingTop="@dimen/dimen_dp_5"
    android:paddingBottom="@dimen/dimen_dp_5"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_dp_80">

    <ImageView
        android:id="@+id/item_exchangerecord_iv"
        android:layout_width="@dimen/dimen_dp_60"
        android:layout_height="@dimen/dimen_dp_60"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/dimen_dp_10"
        android:layout_marginRight="@dimen/dimen_dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_exchangerecord_name_tx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="name"
            android:textColor="#131313"
            android:textSize="@dimen/dimen_sp_14"/>

        <TextView
            android:id="@+id/item_exchangerecord_integral_tx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="积分: 1"
            android:textColor="#131313"
            android:textSize="@dimen/dimen_sp_12"/>

        <TextView
            android:id="@+id/item_exchangerecord_num_tx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="兑换数量: 1"
            android:textColor="#5b5b5b"
            android:textSize="@dimen/dimen_sp_12"/>

        <TextView
            android:id="@+id/item_exchangerecord_time_tx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2016-10-24 16:45"
            android:textColor="#5b5b5b"
            android:textSize="@dimen/dimen_sp_12"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_exchangerecord_exchange_ll"
        android:clickable="true"
        android:paddingTop="@dimen/dimen_dp_5"
        android:paddingBottom="@dimen/dimen_dp_5"
        android:paddingLeft="@dimen/dimen_dp_10"
        android:paddingRight="@dimen/dimen_dp_10"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_exchangerecord_status_tx"
            android:layout_width="@dimen/dimen_dp_50"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:singleLine="true"
            android:textColor="#62b3ee"
            android:text="处理中"/>

    </LinearLayout>

</LinearLayout>