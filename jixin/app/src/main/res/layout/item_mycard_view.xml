<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/dimen_dp_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:background="@mipmap/mycouspon_bg"
        android:paddingBottom="@dimen/dimen_dp_5"
        android:paddingTop="@dimen/dimen_dp_5">

        <TextView
            android:id="@+id/tx01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/item_mycard_price_tx"
            android:text="￥"
            android:textColor="@color/color_ffffff"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tx02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tx01"
            android:layout_toLeftOf="@+id/item_mycard_price_tx"
            android:text="优惠券"
            android:textColor="@color/color_ffffff"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/item_mycard_price_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="1"
            android:textColor="@color/color_ffffff"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/tx02"
            android:layout_marginTop="@dimen/dimen_dp_5"
            android:layout_marginBottom="@dimen/dimen_dp_5"
            android:layout_marginLeft="@dimen/dimen_dp_10"
            android:layout_marginRight="@dimen/dimen_dp_10"
            android:background="@color/color_ffffff" />

        <TextView
            android:id="@+id/item_mycard_limit_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dimen_dp_5"
            android:paddingBottom="@dimen/dimen_dp_5"
            android:layout_below="@+id/line1"
            android:layout_centerHorizontal="true"
            android:text="满3000可用"
            android:textColor="@color/color_ffffff"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:paddingLeft="@dimen/dimen_dp_10"
        android:paddingRight="@dimen/dimen_dp_10">

        <TextView
            android:id="@+id/item_mycard_name_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_dp_5"
            android:text="[商家]93"
            android:textColor="@color/color_37ba8d"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/item_mycard_starttime_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_mycard_name_tx"
            android:layout_marginTop="@dimen/dimen_dp_20"
            android:text="开始:2016-11-21 13:25"
            android:textColor="@color/color_757575"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/item_mycard_endtime_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_mycard_starttime_tx"
            android:text="结束:2016-11-21 13:25"
            android:textColor="@color/color_757575"
            android:textSize="13sp" />

    </RelativeLayout>
</LinearLayout>