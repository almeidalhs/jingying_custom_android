<?xml version="1.0" encoding="utf-8"?>
<com.atman.jixin.widget.SlidingButtonView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:background="@color/color_ffffff">

    <RelativeLayout
        android:id="@+id/item_fullcut_root_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true">

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/layout_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ff0000"
                android:gravity="center"
                android:text="删 除"
                android:textColor="#DDFFFFFF"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_ffffff"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dimen_dp_5"
            android:paddingLeft="@dimen/dimen_dp_10"
            android:paddingRight="@dimen/dimen_dp_10"
            android:paddingTop="@dimen/dimen_dp_5">

            <ImageView
                android:id="@+id/item_exchangerecord_iv"
                android:layout_width="@dimen/dimen_dp_70"
                android:layout_height="@dimen/dimen_dp_70"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_dp_10"
                android:layout_marginRight="@dimen/dimen_dp_10"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_exchangerecord_name_tx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="name"
                    android:singleLine="true"
                    android:textColor="#131313"
                    android:textSize="@dimen/dimen_sp_13" />

                <TextView
                    android:id="@+id/item_exchangerecord_integral_tx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="积分: 1"
                    android:textColor="#131313"
                    android:textSize="@dimen/dimen_sp_11" />

                <TextView
                    android:id="@+id/item_exchangerecord_num_tx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="兑换数量: 1"
                    android:textColor="#5b5b5b"
                    android:textSize="@dimen/dimen_sp_11" />

                <TextView
                    android:id="@+id/item_exchangerecord_time_tx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2016-10-24 16:45"
                    android:textColor="#5b5b5b"
                    android:textSize="@dimen/dimen_sp_11" />

                <TextView
                    android:id="@+id/item_exchangerecord_shop_tx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="[商家]"
                    android:textColor="@color/color_10a065"
                    android:textSize="@dimen/dimen_sp_11" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/item_exchangerecord_exchange_ll"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clickable="true"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dimen_dp_5"
                android:paddingLeft="@dimen/dimen_dp_5"
                android:paddingTop="@dimen/dimen_dp_5">

                <TextView
                    android:id="@+id/item_exchangerecord_status_tx"
                    android:layout_width="@dimen/dimen_dp_60"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="处理中"
                    android:textSize="@dimen/dimen_sp_13"
                    android:textColor="@color/color_62b3ee" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/item_line_iv"
            android:layout_alignParentBottom="true"
            android:background="@color/color_line"
            android:layout_width="match_parent"
            android:layout_height="1px" />
    </RelativeLayout>
</com.atman.jixin.widget.SlidingButtonView>
