<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/membercenter_head_bg"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/membercenter_head_befor_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#88000000"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <com.base.baselibs.widget.ShapeImageView
                xmlns:img="http://schemas.android.com/apk/res-auto"
                android:id="@+id/membercenter_head_iv"
                android:layout_width="@dimen/dimen_dp_60"
                android:layout_height="@dimen/dimen_dp_60"
                android:src="@mipmap/img_sign_logo"
                img:shape="circle" />

            <TextView
                android:id="@+id/membercenter_head_name_tx"
                android:layout_marginTop="@dimen/dimen_dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_ffffff"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_dp_35"
            android:background="#88000000"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_dp_10"
            android:paddingRight="@dimen/dimen_dp_10"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/membercenter_head_integral_tx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/integral_ic"
                android:textColor="#69c0a2"
                android:text="  我的积分  0"/>

            <TextView
                android:id="@+id/membercenter_head_integralmark_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_dp_10"
                android:textColor="#69c0a2"
                android:text="积分兑换"/>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:paddingLeft="@dimen/dimen_dp_15"
        android:paddingTop="@dimen/dimen_dp_5"
        android:paddingBottom="@dimen/dimen_dp_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dimen_sp_13"
        android:textColor="@color/color_494949"
        android:text="附近的人"/>

    <ImageView
        android:layout_width="match_parent"
        android:background="@color/color_line"
        android:layout_height="1px" />

</LinearLayout>