<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/storedetail_head_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_dp_150">

        <ImageView
            android:id="@+id/storedetail_head_bg"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#88000000"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <com.base.baselibs.widget.ShapeImageView
                xmlns:img="http://schemas.android.com/apk/res-auto"
                android:id="@+id/storedetail_head_iv"
                android:layout_width="@dimen/dimen_dp_60"
                android:layout_height="@dimen/dimen_dp_60"
                android:src="@mipmap/img_sign_logo"
                img:shape="circle" />

            <TextView
                android:id="@+id/storedetail_head_name_tx"
                android:layout_marginTop="@dimen/dimen_dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_ffffff"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_dp_35"
            android:background="#88000000"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_dp_10"
            android:paddingRight="@dimen/dimen_dp_10"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/storedetail_head_integral_tx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/color_ffffff"
                android:text=""/>
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:layout_marginTop="@dimen/dimen_dp_15"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_dp_40"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_dp_15"
        android:paddingRight="@dimen/dimen_dp_15">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_dp_10"
            android:src="@mipmap/ic_store_addr"/>

        <TextView
            android:layout_width="@dimen/dimen_dp_150"
            android:layout_height="wrap_content"
            android:text="店铺地址"
            android:textColor="@color/color_6d6d72"
            android:textSize="@dimen/dimen_sp_15" />

        <TextView
            android:id="@+id/storedetail_addr_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_dp_10"
            android:layout_weight="2"
            android:maxLines="3"
            android:ellipsize="end"
            android:gravity="right"
            android:textColor="@color/color_494949"
            android:textSize="@dimen/dimen_sp_11" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dimen_dp_15"
            android:background="@color/color_line"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_dp_40"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_dp_15"
        android:paddingRight="@dimen/dimen_dp_15">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_dp_10"
            android:src="@mipmap/ic_store_phone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="客服电话"
            android:textColor="@color/color_6d6d72"
            android:textSize="@dimen/dimen_sp_15" />

        <TextView
            android:id="@+id/storedetail_phone_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_dp_10"
            android:layout_weight="2"
            android:gravity="right"
            android:textColor="@color/color_494949"
            android:textSize="@dimen/dimen_sp_13" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dimen_dp_15"
            android:background="@color/color_line"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_dp_40"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_dp_15"
        android:paddingRight="@dimen/dimen_dp_15">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_dp_10"
            android:src="@mipmap/ic_store_worktime"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="营业时间"
            android:textColor="@color/color_6d6d72"
            android:textSize="@dimen/dimen_sp_15" />

        <TextView
            android:id="@+id/storedetail_worktime_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_dp_10"
            android:layout_weight="2"
            android:gravity="right"
            android:textColor="@color/color_494949"
            android:textSize="@dimen/dimen_sp_13" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_line"/>

    <ImageView
        android:layout_marginTop="@dimen/dimen_dp_15"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_line"/>

    <LinearLayout
        android:id="@+id/storedetail_member_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_dp_40"
        android:background="@drawable/white_no_radius_bt_selector"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_dp_15"
        android:paddingRight="@dimen/dimen_dp_15">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_dp_10"
            android:src="@mipmap/ic_store_membercenter"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="查看会员中心"
            android:textColor="@color/color_6d6d72"
            android:textSize="@dimen/dimen_sp_15" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_dp_15"
            android:src="@mipmap/right_arrow" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_line"/>

</LinearLayout>