<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_dp_40"
        android:gravity="center_vertical"
        android:background="@color/color_ffffff"
        android:paddingLeft="@dimen/dimen_dp_10"
        android:paddingRight="@dimen/dimen_dp_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_myconsumes_num_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_2B2B2B"
            android:text="2016111800000006"/>

        <TextView
            android:id="@+id/item_myconsumes_shopname_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:singleLine="true"
            android:layout_marginLeft="@dimen/dimen_dp_10"
            android:textColor="@color/color_37ba8d"
            android:text="2016111800000006"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_line"/>

    <LinearLayout
        android:id="@+id/item_myconsumes_goods_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_line"/>

    <LinearLayout
        android:id="@+id/item_myconsumes_offers_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dimen_dp_10"
        android:paddingRight="@dimen/dimen_dp_10"
        android:paddingTop="@dimen/dimen_dp_5"
        android:paddingBottom="@dimen/dimen_dp_5"
        android:visibility="gone"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_black"
            android:textSize="12sp"
            android:text="已使用优惠:"/>

        <com.atman.jixin.widget.XCFlowLayout
            android:id="@+id/item_memberrecord_flowlayout"
            android:layout_marginLeft="@dimen/dimen_dp_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_dp_30"
        android:paddingLeft="@dimen/dimen_dp_10"
        android:paddingRight="@dimen/dimen_dp_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_myconsumes_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-11-18 16:45"
            android:textColor="@color/color_2B2B2B"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/item_myconsumes_total_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="共1件商品,合计￥ 2.00"
            android:textColor="@color/color_2B2B2B"
            android:textSize="13sp"/>
    </LinearLayout>

</LinearLayout>