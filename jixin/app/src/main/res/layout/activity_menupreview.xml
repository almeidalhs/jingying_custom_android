<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--顶部tab标签容器-->
    <android.support.design.widget.TabLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/menupreview_top_tl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_dp_35"
        android:background="@color/color_ffffff"
        app:tabIndicatorColor="@color/color_10a065"
        app:tabSelectedTextColor="@color/color_10a065"
        app:tabTextColor="@color/color_black">

    </android.support.design.widget.TabLayout>

    <ImageView
        android:id="@+id/storepreview_more_iv"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:src="@color/color_line" />

    <com.base.baselibs.widget.NoSwipeViewPager
        android:id="@+id/menupreview_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>