<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_default_bg"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/dimen_dp_250"
        android:layout_height="wrap_content"
        android:background="@color/activity_default_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="@dimen/dimen_dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入兑换商品数量"
            android:textColor="#000000"
            android:textSize="@dimen/dimen_sp_18" />

        <TextView
            android:id="@+id/edittext_dialog_content_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_dp_5"
            android:layout_marginTop="@dimen/dimen_dp_5"
            android:text="请输入兑换商品数量"
            android:textColor="#757575"
            android:textSize="@dimen/dimen_sp_14" />

        <com.base.baselibs.widget.MyCleanEditText
            android:id="@+id/edittext_dialog_num_et"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_dp_35"
            android:layout_marginBottom="@dimen/dimen_dp_20"
            android:layout_marginLeft="@dimen/dimen_dp_30"
            android:layout_marginRight="@dimen/dimen_dp_30"
            android:layout_marginTop="@dimen/dimen_dp_10"
            android:background="@drawable/et_addcomment_bg_selector"
            android:hint=""
            android:text="1"
            android:inputType="number"
            android:imeOptions="actionSend"
            android:maxLength="15"
            android:padding="@dimen/dimen_dp_5"
            android:singleLine="true"
            android:textColor="@color/color_black"
            android:textSize="@dimen/dimen_sp_15" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_dp_40"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/edittext_dialog_cancel_tx"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/white_no_radius_bt_selector"
            android:gravity="center"
            android:text="取消"
            android:textColor="#000000"
            android:textSize="@dimen/dimen_sp_14" />

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/color_line" />

        <TextView
            android:id="@+id/edittext_dialog_ok_tx"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/white_no_radius_bt_selector"
            android:gravity="center"
            android:text="确定"
            android:textColor="#000000"
            android:textSize="@dimen/dimen_sp_14" />
    </LinearLayout>


</LinearLayout>