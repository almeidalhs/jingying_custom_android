<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dimen_dp_5"
    android:paddingRight="@dimen/dimen_dp_5"
    android:paddingTop="@dimen/dimen_dp_5">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.base.baselibs.widget.ShapeImageView xmlns:img="http://schemas.android.com/apk/res-auto"
            android:id="@+id/item_comment_head_iv"
            android:layout_width="@dimen/dimen_dp_35"
            android:layout_height="@dimen/dimen_dp_35"
            android:layout_marginLeft="@dimen/dimen_dp_10"
            android:layout_marginRight="@dimen/dimen_dp_10"
            android:layout_marginTop="@dimen/dimen_dp_5"
            android:src="@mipmap/img_sign_logo"
            img:shape="circle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_comment_name_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                android:textColor="@color/color_2B2B2B"
                android:textSize="@dimen/dimen_sp_14" />

            <TextView
                android:id="@+id/item_comment_time_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_dp_5"
                android:text="2016-11-01"
                android:textColor="@color/color_757575"
                android:textSize="@dimen/dimen_sp_10" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_comment_like_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_dp_10"
            android:drawableRight="@mipmap/item_comment_not_like"
            android:gravity="center"
            android:text="1  "
            android:textColor="@color/color_2B2B2B"
            android:textSize="@dimen/dimen_sp_12" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_comment_content_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_dp_55"
        android:layout_marginBottom="@dimen/dimen_dp_3"
        android:text="content"
        android:textColor="@color/color_2B2B2B"
        android:textSize="@dimen/dimen_sp_14" />

    <LinearLayout
        android:id="@+id/item_comment_line_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:paddingBottom="@dimen/dimen_dp_3">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dimen_dp_55"
            android:background="@color/color_line" />
    </LinearLayout>

</LinearLayout>