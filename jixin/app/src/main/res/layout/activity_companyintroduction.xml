<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/company_top_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_dp_150">

                <SurfaceView
                    android:id="@+id/company_top_sv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <ImageView
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/company_top_iv"/>

                <ImageView
                    android:id="@+id/company_top_start_iv"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_vedio_start"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_ffffff"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_dp_15">

                <TextView
                    android:id="@+id/company_introduction_tx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lineSpacingExtra="@dimen/dimen_dp_5"
                    android:textColor="@color/color_2B2B2B"
                    android:textSize="@dimen/dimen_sp_14" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_dp_15"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Text"
                        android:textColor="@color/color_000000"
                        android:textSize="@dimen/dimen_dp_30" />

                    <ImageView
                        android:layout_width="@dimen/dimen_dp_35"
                        android:layout_height="@dimen/dimen_dp_3"
                        android:layout_marginTop="@dimen/dimen_dp_10"
                        android:background="@color/color_000000" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>