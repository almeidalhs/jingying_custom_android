<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.atman.jixin">

    <application
        android:name=".ui.base.MyBaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyAppStyle">
        <activity android:name=".ui.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.MainActivity"/>
        <activity android:name=".ui.personal.LoginActivity" android:windowSoftInputMode="stateHidden|adjustResize"/>
        <activity android:name=".ui.personal.ForgetPassWordActivity" android:windowSoftInputMode="stateHidden|adjustResize"/>
        <activity android:name=".ui.personal.RegisterActivity" android:windowSoftInputMode="stateHidden|adjustResize"/>
        <activity android:name=".ui.personal.UserAgreementActivity" />

        <!--Umeng-->
        <meta-data android:value="${UMENG_CHANNEL_VALUE}" android:name="UMENG_CHANNEL"/>
    </application>

</manifest>